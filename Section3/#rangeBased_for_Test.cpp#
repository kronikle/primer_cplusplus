#include <iostream>
#include <string>

using std::string;
using std::cout;
using std::endl;

int main(){
  string str("some string");
  for(auto c : str)
    cout << c << endl;

  // se oltre ad accedere ai valori della sequenza di caratteri
  // voglia anche cambiarli, la variabile del loop
  // DEVE essere una REFERENCE
  for(auto &c : str)
    c = toupper(c);

  cout << str << endl;

  
  return 0;
}
