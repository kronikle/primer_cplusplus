#include <iostream>

int main(){

  int a = 0;
  int b = 1;

  std::cout << "we have a = " << a << " and b = " << b << " int variables" << std::endl;
  int *p1 = &a;

  std::cout << "now I define p1 as pointer of a" << std::endl;
  std::cout << "p1 has value: " << *p1 << std::endl;

  

  return 0;
}
